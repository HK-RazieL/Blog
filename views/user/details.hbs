{{#if user}}
    <div class="container textReview">
        <div class="span3 well textReview">
            <center>
                <a href="#aboutModal" data-toggle="modal" data-target="#myModal">
                    <div style="background-image: url('{{user.imagePath}}')" name="aboutme" border="0"
                         class="img-circle profileImage"></div>
                </a>
                <h3>{{user.fullName}} <a href="/user/details-edit/{{user.id}}"><i class="fa fa-pencil-square-o"></i></a></h3>
                <em>click my face for more</em>
            </center>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title" id="myModalLabel">More About {{user.fullName}}</h4>
                    </div>
                    <div class="modal-body">
                        <center>
                            <div style="background-image: url('{{user.imagePath}}')" name="aboutme" border="0"
                                 class="img-circle profileImage"></div>
                            </a>
                            <h3 class="media-heading textReview">{{user.fullName}}
                                <small>{{user.location}}</small>
                            </h3>

                        </center>
                        <hr>
                        <center>
                            <p class="text-left"><strong>Bio: </strong><br>
                                {{user.bio}}</p>
                            <br>
                            <p class="text-left"><strong>Gender: </strong><br>
                                {{user.gender}}</p>
                            <br>
                        </center>
                    </div>
                    <div class="modal-footer">
                        <center>
                            <button type="button" class="btn btn-default" data-dismiss="modal">I've heard enough
                                about {{user.fullName}}</button>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}
{{#unless user}}
    <script>
        window.location.replace("/user/register");
    </script>
{{/unless}}