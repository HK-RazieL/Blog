<div class="container">
    <h1>Admin panel</h1>
    <div class="panel panel-default">
        <table class="table table-striped table-hover user-edit">
            <thead>
            <tr>
                <th>Date</th>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each users}}
                <tr {{#if this.isAdmin }}class="info" {{/if}}>
                    <td>Date</td>
                    <td>{{ this.id }}</td>
                    <td>{{ this.fullName }}</td>
                    <td>{{ this.email }}</td>
                    <td>
                        <button type="button" onclick="location.href='/admin/user/edit/{{this.id}}';" class="btn btn-primary btn-xs"><span
                                class="glyphicon glyphicon-edit"></span> Edit
                        </button>
                        <button type="button" onclick="location.href='/admin/user/delete/{{this.id}}'" class="btn btn-danger btn-xs"><span
                                class="glyphicon glyphicon-remove-circle"></span> Delete
                        </button>

                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

